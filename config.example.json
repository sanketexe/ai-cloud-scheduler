      {
        "condition": "account_id",
        "value": "123456789012",
        "tags": {
          "Team": "Engineering",
          "CostCenter": "CC-ENG"
        }
      }
    ]
  },
  
  "cost_optimization": {
    "ri_recommendations": {
      "enabled": true,
      "min_stability_score": 0.7,
      "min_predictability_score": 0.6,
      "max_payback_months": 12,
      "analysis_period_days": 90
    },
    
    "waste_detection": {
      "enabled": true,
      "idle_threshold_days": 7,
      "low_utilization_threshold": 5.0,
      "check_frequency_hours": 24
    },
    
    "rightsizing": {
      "enabled": true,
      "utilization_threshold": 40.0,
      "recommendation_confidence": "HIGH"
    }
  },
  
